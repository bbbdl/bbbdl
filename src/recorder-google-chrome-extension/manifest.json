{
	"manifest_version": 2,
	"minimum_chrome_version": "47",
	"name": "BBBDL_RECORDER_EXTENTION_FOR_CHROME",
	"short_name": "BBBDL_RECORDER",
	"permissions": [
		"tabs",
		"activeTab",
		"tabCapture",
		"storage",
		"unlimitedStorage",
		"contextMenus",
		"downloads",
		"<all_urls>"
	],
	"update_url": "https://clients2.google.com/service/update2/crx",
	"version": "1.0.0",
	"background": {
		"persistent": true,
		"scripts": [
			"background.js"
		]
	}
}
